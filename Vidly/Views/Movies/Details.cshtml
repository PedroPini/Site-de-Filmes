@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.Title</h2>
<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release Date: @Model.ReleaseDate.ToString("MMMM dd, yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("MMMM dd, yyyy")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

