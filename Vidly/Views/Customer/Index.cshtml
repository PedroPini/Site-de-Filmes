@model IEnumerable<Vidly.Models.Customer>


<h2>Customers</h2>
@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
<p>
    @Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-primary" })
</p>


    
<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th> Customer</th>
            <th>Discount Rate</th>
            <th>Edit</th>
        </tr>
    </thead>
    @foreach (var users in Model)
    {
        <tbody>

        <td> @Html.ActionLink(@users.Name, "Details", "Customer", new { id = @users.Id }, null)</td>
        <td>@users.MembershipType.Name</td>
        <td> @Html.ActionLink(@users.Name, "Edit", "Customer", new { id = @users.Id }, null)</td>
        <td>Delete</td>

        </tbody>
    }
</table>



